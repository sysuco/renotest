{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "description": "group opentelemetry python packages together",
      "groupName": "opentelemetry",
      "groupSlug": "opentelemetry-python",
      "matchDatasources": [
        "pypi"
      ],
      "matchPackagePrefixes": [
        "opentelemetry-"
      ]
    }
  ]
}
